<div class="bootstrap-frm">
  <h1> Hang out form </h1>
   <h2> Make your own movie hang out! </h2>
  <%= form_for @viewing_party do |form| %>
    <p> <label>
      <div class="field">
         <%= form.select(:movie_id, options_for_select(@movies.map{|m| [m.name, m.id] }))%> <br />
       </div>
    </label> </p>
    <p> <label>
      <div class="field">
        <%= form.label :theater %> 
        <%= form.select(:theater, ViewingParty::THEATRES)%> <br />
      </div>
    </label> </p>
    <p> <label>
      <div class="field">
        <%= datetime_select(:viewing_party, :viewing_time, ampm: true) %>
      </div>
    </label></p>
    <p><label>
      <div class="field">
      <%= form.submit "Create" %>
      </div>
    </label></p>
  <% end %>
</div>
